#!/usr/bin/env python3
import os
import sys
from saxlib.sax_runner import run_sax_file

def main():
    if len(sys.argv) < 2:
        print("Usage: sax <file.01>")
        sys.exit(1)

    file_path = sys.argv[1]
    if not os.path.exists(file_path):
        print(f"Error: File '{file_path}' not found.")
        sys.exit(1)

    if not file_path.endswith(".01"):
        print("Error: File must have a .01 extension.")
        sys.exit(1)

    # Execute the .01 file
    run_sax_file(file_path)

if __name__ == "__main__":
    main()
